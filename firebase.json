{
  "storage": {
    "rules": "firebase/fire_storage.rules"
  },
  "firestore": {
    "rules": "firebase/firestore.rules"
  },
  "emulators": {
    "auth": {
      "port": 3000
    },
    "functions": {
      "port": 3001
    },
    "firestore": {
      "port": 3002
    },
    "storage": {
      "port": 3003
    },
    "ui": {
      "enabled": true
    }
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
