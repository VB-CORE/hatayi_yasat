{
  "storage": {
    "rules": "firebase/fire_storage.rules"
  },
  "firestore": {
    "rules": "firebase/firestore.rules"
  },
  "emulators": {
    "auth": {
      "port": 3000,
      "persist": true
    },
    "functions": {
      "port": 3001,
      "persist": true
    },
    "firestore": {
      "port": 3004,
      "persist": true
    },
    "storage": {
      "port": 3005,
      "persist": true
    },
    "ui": {
      "enabled": true
    },
    "exportOnExit": "./emulator-data",
    "importOnStart": "./emulator-data"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}