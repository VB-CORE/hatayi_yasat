rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {


    function isAuthenticated(request) {
      return request.auth != null;
    }

    function isAdmin(request) {
      let adminDoc = get(/databases/$(database)/documents/adminList/config);
      let isAdmin = adminDoc.data.emails.hasAny([request.auth.token.email]);
      return isAuthenticated(request)
        && isAdmin;
    }

    match /regionalCities/{document} {
      allow read: if true;
      allow write: if isAdmin(request);
    }

    match /regionalTowns/{document} {
      allow read: if true;
      allow write: if isAuthenticated(request);
    }

    match /adminList/{document} {
      allow read: if isAuthenticated(request);
      allow write: if isAdmin(request);
    }

    match /approvedCampaigns/{document} {
      allow read: if true;
      allow write: if true;
    }

    match /unApprovedCampaigns/{document} {
      allow read: if true;
      allow write: if true;
    }

    // Client
    match /specialAgency/{agency} {
      allow read: if true;
      allow write: if isAdmin(request);
    }

    match /news/{document} {
      allow read: if true;
      allow write: if isAdmin(request);
    }

    // Admin

    match /towns/{document} {
      allow read: if true;
      allow write: if isAdmin(request);
    }

    match /allowedAdminClaims/{document} {
      allow read: if isAdmin(request);
      allow write: if isAdmin(request);
    }

    match /approvedApplications/{document} {
      allow read: if true;
      allow write: if isAdmin(request);
    }

    match /unApprovedApplications/{appId} {
      allow read: if isAdmin(request);
      allow write: if true;
    }

    match /notifications/{document} {
      allow read: if true;
      allow write: if isAdmin(request);
    }

    match /developers/{document} {
      allow read: if true;
      allow write: if isAdmin(request);
    }

    match /logs/{document} {
      allow read: if isAdmin(request);
      allow write: if isAdmin(request);
    }

    match /categories/{document} {
      allow read: if true;
      allow write;
    }

    match /scholarship/{scholarship} {
      allow read;
      allow write: if true;
    }

    match /chainStores/{chainStores} {
      allow read;
      allow write: if true;
    }

    match /usefulLinks/{document} {
      allow read;
      allow write: if true;
    }

  }
}
